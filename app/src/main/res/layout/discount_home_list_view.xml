<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="225dp">

        <LinearLayout
            android:id="@+id/LinearLayoutDiscount"
            android:orientation="horizontal"
            android:layout_margin="0dp"
            android:background="@drawable/edit_text_design2"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_nameDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/order_now"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_DetailsDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:maxLines="2"
                    android:lines="2"
                    android:text="order_nowsdasdasdasdsadasdsadasdasdasdsa"
                    android:textColor="@color/Color_App1"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/LinearLayoutFurnitureDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ImageFurnitureDiscount"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="3dp"
                        android:src="@drawable/group" />

                    <TextView
                        android:id="@+id/tv_NameFurnitureDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/ImageFurnitureDiscount"
                        android:text="@string/order_now"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/ImageFurnitureDiscount1"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/group" />

                        <TextView
                            android:id="@+id/tv_PersentPriceDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ImageFurnitureDiscount1"
                            android:text="@string/order_now"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:visibility="visible" />

                    </RelativeLayout>

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_PriceAfterDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/order_now"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/tv_BeforePriceDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="@string/order_now"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_weight="1.5"
                android:id="@+id/ImageViewSliderDiscount"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/group" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_orderNowDiscount"
            android:layout_width="175dp"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_design2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_searchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/order_now"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ui_ImageViewFilter"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/group" />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>